<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_clean"
    android:background="@color/main_background"
    tools:context=".ui.boost.BoostFragment">

    <TextView
        android:id="@+id/tv_boost_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/golos_regular"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        android:layout_marginTop="@dimen/_26sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <yinkio.android.customView.progressBar.ArcCircleProgressBar
        android:id="@+id/circular_progress_storage_percent"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_gravity="center"
        app:canalColor="@color/white"
        app:canalHasShadow="false"
        app:canalWidth="@dimen/_6sdp"
        app:indicatorColor="@color/blue"
        app:indicatorEndAngle="270"
        app:indicatorStartAngle="-90"
        app:indicatorWidth="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_12sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_boost_title"
        app:progress="65" />

    <TextView
        android:id="@+id/tv_degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/golos_regular"
        android:maxLines="1"
        android:text="@string/mb"
        android:textColor="@color/white"
        android:textSize="@dimen/_25ssp"
        app:layout_constraintBottom_toBottomOf="@+id/circular_progress_storage_percent"
        app:layout_constraintEnd_toEndOf="@+id/circular_progress_storage_percent"
        app:layout_constraintStart_toStartOf="@+id/circular_progress_storage_percent"
        app:layout_constraintTop_toTopOf="@+id/circular_progress_storage_percent" />

    <TextView
        android:id="@+id/tv_battery_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:fontFamily="@font/golos_bold"
        android:gravity="center_horizontal"
        android:text="@string/cleaning"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/circular_progress_storage_percent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_danger_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_for_params"
        android:drawablePadding="@dimen/_8sdp"
        android:fontFamily="@font/golos_regular"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_14sdp"
        android:paddingStart="@dimen/_22sdp"
        android:text="@string/clean_danger_title"
        android:textColor="@color/red"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        app:drawableStartCompat="@drawable/ic_danger"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_battery_name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_danger_description_off"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_for_params"
        android:drawablePadding="@dimen/_8sdp"
        android:fontFamily="@font/golos_regular"
        android:gravity="center_vertical"
        android:paddingVertical="@dimen/_14sdp"
        android:paddingStart="@dimen/_12sdp"
        android:text="@string/clean_done"
        android:textColor="@color/green"
        android:textSize="@dimen/_12ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        app:drawableStartCompat="@drawable/ic_danger_off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_battery_name" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="tv_danger_description_off,tv_danger_description" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/container_danger_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_9sdp"
        android:background="@drawable/bg_main_for_params"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_22sdp"
        android:paddingTop="@dimen/_13sdp"
        android:paddingBottom="@dimen/_16sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barrier">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/golos_medium"
            android:text="@string/finded_junk_file"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/golos_regular"
            android:text="@string/clean_junks_safely"
            android:textColor="@color/black"
            android:textSize="@dimen/_9ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageView
        android:id="@+id/iv_gander_bucket"
        android:layout_width="@dimen/_36sdp"
        android:layout_height="@dimen/_41sdp"
        android:background="@drawable/ic_clean_danger"
        android:layout_marginEnd="@dimen/_32sdp"
        app:layout_constraintBottom_toBottomOf="@+id/container_danger_description"
        app:layout_constraintEnd_toEndOf="@+id/container_danger_description"
        app:layout_constraintTop_toTopOf="@+id/container_danger_description" />

    <LinearLayout
        android:id="@+id/container_danger_description_off"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_main_for_params"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_22sdp"
        android:paddingTop="@dimen/_13sdp"
        android:paddingBottom="@dimen/_16sdp"
        android:layout_marginTop="@dimen/_9sdp"
        android:layout_marginHorizontal="@dimen/_22sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container_danger_description">

        <TextView
            android:id="@+id/tv_storage_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:fontFamily="@font/golos_medium"
            android:text="@string/garbage_not_found"
            android:textColor="@color/black"
            android:textSize="@dimen/_12ssp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_free_memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:fontFamily="@font/golos_regular"
            android:text="@string/free_memory_size"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            app:layout_constraintStart_toStartOf="@+id/tv_storage_title"
            app:layout_constraintTop_toBottomOf="@id/tv_storage_title" />

    </LinearLayout>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_need_cleaning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="container_danger_description, tv_danger_description, iv_gander_bucket" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/group_cleaning_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:constraint_referenced_ids="container_danger_description_off,tv_danger_description_off" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_clean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_22sdp"
        android:layout_marginBottom="@dimen/_12sdp"
        android:background="@color/blue"
        android:drawableEnd="@drawable/ic_white_bucket"
        android:fontFamily="@font/golos_regular"
        android:gravity="start|center_vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:text="@string/clean"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>