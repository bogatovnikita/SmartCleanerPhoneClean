<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center">

    <bogatovnikita.toolbar.ui.ToolbarView
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:title_text="@string/garbage_clean_title"
        app:show_menu="false"
        app:show_cross="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_done"
        android:layout_marginTop="18dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/ic_trash"
            android:layout_marginTop="2dp"
            app:tint="@color/secondary" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondary"
            android:textAppearance="@style/Text.Semi_Bold.32"
            tools:text="300 MB"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cleaning_result_message"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:textAppearance="@style/Text.Medium.14"
        android:textColor="@color/secondary"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/result_recommendation"
        android:layout_marginHorizontal="24dp"
        android:gravity="center"
        android:textAppearance="@style/Text.Medium.16"
        android:textColor="@color/grey"
        android:layout_marginTop="24dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>





</LinearLayout>