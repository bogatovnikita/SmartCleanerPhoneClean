<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/need_permission"
            android:textAppearance="@style/Text.Header_2"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/need_permission_description"
            android:textAppearance="@style/Text.Body_2.1"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="40dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/allow_access_to_manage_all_files"
                android:textAppearance="@style/Text.Body_2"
                android:textColor="@color/white"
                android:paddingStart="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:paddingEnd="60dp"
                android:background="@drawable/bg_permission_message"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_hand_and_switch"
                android:layout_gravity="center|end"
                android:layout_margin="16dp"/>

        </FrameLayout>

    </LinearLayout>




    <TextView
        android:id="@+id/give_permission"
        android:text="@string/give_permission"
        style="@style/MainButton"
        android:layout_gravity="bottom"/>

</FrameLayout>